

<div class="center hero-unit">
<h1>All Projects</h1>

<style>
td
{
  text-align:left;
}
</style>

<table class="table  table-condensed">
  <thead>
    <tr>
      <th>工号 Id</th>
      <th>项目名称 Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projs.each do |proj| %>
      <tr>
        <td><%= proj.hwid %></td>
        <td><%= proj.case %></td>
        <td><%= link_to 'Show', proj ,class: "btn btn-xs btn-default"%> 
          <%= link_to 'Edit', edit_proj_path(proj) ,class: "btn btn-xs btn-default" %>
          <%= link_to 'Destroy', proj, method: :delete, data: { confirm: 'Are you sure?' } ,class: "btn btn-xs btn-info"%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Proj', new_proj_path ,class: "btn btn-large btn-primary"%>
</div>